<Window x:Class="TabuGame.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabuGame"
        mc:Ignorable="d"
        Title="Settings" Height="200" Width="380">
    <WrapPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBlock Padding="10">Press number of cards in deck:</TextBlock>
            <TextBox x:Name="NumberOfCardsTextBox" Padding="10" Width="50"></TextBox>
        </StackPanel>
        <Button Click="Button_Click">OK</Button>
    </WrapPanel>
</Window>
